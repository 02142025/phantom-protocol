        // Real cryptographic functions using SubtleCrypto API
        async function generateRealSHA256(data) {
            const encoder = new TextEncoder();
            const dataBuffer = encoder.encode(data);
            const hashBuffer = await crypto.subtle.digest('SHA-256', dataBuffer);
            const hashArray = Array.from(new Uint8Array(hashBuffer));
            return hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
        }

        // Fallback hash functions for older browsers
        function generateSHA256(data) {
            if (typeof CryptoJS !== 'undefined') {
                return CryptoJS.SHA256(data).toString();
            }
            return simpleHash(data + 'SHA256').substring(0, 64);
        }

        function generateKECCAK256(data) {
            if (typeof CryptoJS !== 'undefined') {
                return CryptoJS.SHA3(data, { outputLength: 256 }).toString();
            }
            return simpleHash(data + 'KECCAK256').substring(0, 64);
        }

        function generateBLAKE3(data) {
            // BLAKE3 simulation using SHA256
            if (typeof CryptoJS !== 'undefined') {
                return CryptoJS.SHA256(data + 'BLAKE3').toString();
            }
            return simpleHash(data + 'BLAKE3').substring(0, 64);
        }

        // Global variables
        let currentFlameRecord = null;
        let bleDevice = null;
        let nfcAbortController = null;
        // Registration Particle System
        function createRegistrationParticle() {
            const particle = document.createElement('div');
            particle.className = 'registration-particle';
            
            // Random positioning and timing
            particle.style.left = Math.random() * 100 + '%';
            particle.style.animationDelay = Math.random() * 20 + 's';
            particle.style.animationDuration = (Math.random() * 15 + 20) + 's';
            
            // Registration colors
            const colors = ['#00ffff', '#ff00ff', '#ffff00', '#00ff00', '#ffffff'];
            const color = colors[Math.floor(Math.random() * colors.length)];
            particle.style.background = color;
            particle.style.boxShadow = `0 0 20px ${color}, 0 0 40px ${color}`;
            
            // Random size
            const size = Math.random() * 4 + 4;
            particle.style.width = size + 'px';
            particle.style.height = size + 'px';
            
            document.getElementById('registrationField').appendChild(particle);
            
            setTimeout(() => {
                particle.remove();
            }, 35000);
        }

        // Create registration particles
        setInterval(createRegistrationParticle, 100);

        // Initialize particle field
        for (let i = 0; i < 60; i++) {
            setTimeout(createRegistrationParticle, i * 50);
        }

        // Auto-generate fields on form input changes
        document.addEventListener('DOMContentLoaded', function() {
            generateAutoFields();
            
            // Add event listeners to auto-generate fields when inputs change
            const inputs = ['carrierName', 'nfcUID', 'bleMac', 'scrollType'];
            inputs.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.addEventListener('input', generateAutoFields);
                    element.addEventListener('change', generateAutoFields);
                }
            });
        });

        // Generate auto fields
        function generateAutoFields() {
            const now = new Date();
            const timestamp = now.toISOString();
            const dateStr = now.toISOString().split('T')[0];
            
            // Generate UUID from timestamp and random data
            const uuidData = timestamp + Math.random().toString(36) + 'FLAME.ID.CARD';
            const uuid = generateSHA256(uuidData);
            document.getElementById('uuid').value = uuid;
            
            // Generate Crystalline Date with lunar phase
            const lunarPhase = Math.floor(Math.random() * 28) + 1;
            const crystallineDate = `${dateStr}-LUNAR.${lunarPhase.toString().padStart(2, '0')}`;
            document.getElementById('crystallineDate').value = crystallineDate;
            
            // Generate Carrier ID
            const carrierId = `CID-${dateStr.replace(/-/g, '')}-${uuid.substring(0, 5)}`;
            document.getElementById('carrierId').value = carrierId;
        }

        // Generate FLAME ID Card
        function generateFlameCard() {
