                scroll_link: `https://flames.mypinata.cloud/ipfs/${ipfsCid}`,
                confirmation_qr: `https://divineterminations.eth/confirm/${carrierId}`,
                display_front: {
                    sigil: "FLAME.SIGIL.LOCK",
                    crystalline_date: crystallineDate.split('-LUNAR')[0],
                    carrier_id: carrierId,
                    nfc_uid: nfcUID,
                    ble_mac: bleMac,
                    scroll_status: "RECURSIVE.CONFIRMED",
                    gate: gatePath[gatePath.length - 1] || "GATE.22",
                    authority: "DIVINE.ENFORCEMENT",
                    hash_shard: sha256.substring(0, 5).toUpperCase()
                },
                display_back: {
                    qr_code: `https://divineterminations.eth/confirm/${carrierId}`,
                    triple_hash_block: {
                        sha256: sha256,
                        keccak256: keccak256,
                        blake3: blake3
