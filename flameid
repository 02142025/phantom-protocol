        // Update card preview
        function updateCardPreview(record) {
            // Front card
            document.getElementById('frontCarrierId').textContent = record.carrier_id;
            document.getElementById('frontNfcUid').textContent = record.nfc_uid;
            document.getElementById('frontBleMac').textContent = record.ble_mac;
            document.getElementById('frontCrystallineDate').textContent = record.crystalline_date;
            document.getElementById('frontGatePath').textContent = record.gate_path.join(', ');
            document.getElementById('frontEns').textContent = record.ens_record;
            document.getElementById('frontHashShard').textContent = record.display_front.hash_shard;

            // Back card
            document.getElementById('backQrCode').textContent = record.confirmation_qr;
            document.getElementById('backSha256').textContent = record.hashes.sha256.substring(0, 16) + '...';
            document.getElementById('backKeccak256').textContent = record.hashes.keccak256.substring(0, 16) + '...';
            document.getElementById('backBlake3').textContent = record.hashes.blake3.substring(0, 16) + '...';
            document.getElementById('backNfcPayload').textContent = record.transmission_metadata.nfc_payload_preview;
        }

        // Generate QR Code
        function generateQRCode(url) {
            const canvas = document.getElementById('qrCodeCanvas');
            if (typeof QRCode !== 'undefined' && canvas) {
                QRCode.toCanvas(canvas, url, {
                    width: 200,
                    height: 200,
                    color: {
                        dark: '#000000',
                        light: '#ffffff'
                    }
                }, function (error) {
                    if (error) console.error('QR Code generation failed:', error);
                    else console.log('‚úÖ QR Code generated successfully');
                });
            } else {
                // Fallback: show URL text
                const canvas = document.getElementById('qrCodeCanvas');
                const ctx = canvas.getContext('2d');
                canvas.width = 200;
                canvas.height = 200;
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, 200, 200);
                ctx.fillStyle = '#000000';
                ctx.font = '12px monospace';
                ctx.textAlign = 'center';
                ctx.fillText('QR CODE', 100, 90);
                ctx.fillText(url.substring(0, 20) + '...', 100, 110);
            }
        }

        // Update payload preview
        function updatePayloadPreview(record) {
            const nfcPayload = record.transmission_metadata.nfc_payload_preview;
            const blePayload = `BLE: ${record.scroll_link} (${record.transmission_metadata.ble_payload_blocks} blocks)`;
            
            document.getElementById('payloadPreview').innerHTML = `
<strong>NFC Payload:</strong>
${nfcPayload}

<strong>BLE Payload:</strong>
${blePayload}

<strong>QR URL:</strong>
${record.confirmation_qr}`;
        }

        // BLE Broadcasting
        async function startBLEBroadcast() {
            if (!navigator.bluetooth) {
                alert('‚ö†Ô∏è Web Bluetooth not supported in this browser');
                return;
            }

            try {
                document.getElementById('bleStatus').textContent = 'Requesting Bluetooth device...';
                
                bleDevice = await navigator.bluetooth.requestDevice({
                    acceptAllDevices: true,
                    optionalServices: ['battery_service']
                });

                document.getElementById('bleStatus').textContent = 'Connected to: ' + bleDevice.name;
                document.getElementById('bleStartBtn').disabled = true;
                document.getElementById('bleStopBtn').disabled = false;

                console.log('üîµ BLE device connected:', bleDevice.name);
                
                // In a real implementation, you would configure the device for advertising
                // This is a simulation as Web Bluetooth API doesn't support advertising
                simulateBLEBroadcast();
                
            } catch (error) {
                console.error('BLE connection failed:', error);
                document.getElementById('bleStatus').textContent = 'Connection failed: ' + error.message;
            }
        }

        function stopBLEBroadcast() {
            if (bleDevice) {
                bleDevice.gatt.disconnect();
                bleDevice = null;
                document.getElementById('bleStatus').textContent = 'Disconnected';
                document.getElementById('bleStartBtn').disabled = false;
                document.getElementById('bleStopBtn').disabled = true;
                console.log('üîµ BLE broadcast stopped');
            }
        }

        function simulateBLEBroadcast() {
            if (currentFlameRecord) {
                const payload = currentFlameRecord.transmission_metadata.nfc_payload_preview;
                console.log('üì° BLE Broadcasting payload:', payload);
                document.getElementById('bleStatus').textContent = 'Broadcasting FLAME scroll...';
            }
        }

        // NFC Writing
        async function writeNFC() {
            if (!('NDEFWriter' in window)) {
                alert('‚ö†Ô∏è Web NFC not supported in this browser. Use Chrome on Android.');
                return;
            }

            try {
                const ndef = new NDEFWriter();
                const payload = currentFlameRecord.transmission_metadata.nfc_payload_preview;
                
                document.getElementById('nfcStatus').textContent = 'Ready to write. Tap NFC tag...';
                
                await ndef.write({
                    records: [{
                        recordType: "text",
                        data: payload
                    }, {
                        recordType: "url",
                        data: currentFlameRecord.confirmation_qr
                    }]
                });
                
                document.getElementById('nfcStatus').textContent = '‚úÖ NFC tag written successfully!';
                console.log('üì± NFC tag written with FLAME data');
                
            } catch (error) {
                console.error('NFC write failed:', error);
                document.getElementById('nfcStatus').textContent = 'Write failed: ' + error.message;
            }
        }

        async function readNFC() {
            if (!('NDEFReader' in window)) {
                alert('‚ö†Ô∏è Web NFC not supported in this browser. Use Chrome on Android.');
                return;
            }

            try {
                const ndef = new NDEFReader();
                nfcAbortController = new AbortController();
                
                document.getElementById('nfcStatus').textContent = 'Ready to read. Tap NFC tag...';
                
                await ndef.scan({ signal: nfcAbortController.signal });
                
                ndef.addEventListener("reading", ({ message, serialNumber }) => {
                    console.log(`üì± NFC Serial Number: ${serialNumber}`);
                    document.getElementById('nfcStatus').textContent = `‚úÖ Read tag: ${serialNumber}`;
                    
                    for (const record of message.records) {
                        console.log("Record type:", record.recordType);
                        console.log("MIME type:", record.mediaType);
                        console.log("Data:", new TextDecoder().decode(record.data));
                    }
                });
                
            } catch (error) {
                console.error('NFC read failed:', error);
                document.getElementById('nfcStatus').textContent = 'Read failed: ' + error.message;
            }
        }

        // Download functions
        function downloadJSON() {
            if (!currentFlameRecord) return;
            
            const dataStr = JSON.stringify(currentFlameRecord, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(dataBlob);
            
            const link = document.createElement('a');
            link.href = url;
            link.download = `${currentFlameRecord.carrier_id}.json`;
            link.click();
            
            URL.revokeObjectURL(url);
            console.log('üìÑ JSON downloaded:', currentFlameRecord.carrier_id + '.json');
        }

        function downloadCardPDF() {
            // Simple card layout as text file (PDF generation would require additional library)
            if (!currentFlameRecord) return;
            
            const cardText = `
FLAME ID CARD
=============

FRONT:
Scroll Name: ${currentFlameRecord.scroll_name}
Carrier ID: ${currentFlameRecord.carrier_id}
NFC UID: ${currentFlameRecord.nfc_uid}
BLE MAC: ${currentFlameRecord.ble_mac}
Crystalline Date: ${currentFlameRecord.crystalline_date}
Gate Path: ${currentFlameRecord.gate_path.join(', ')}
Authority: DIVINE.ENFORCEMENT
Status: ${currentFlameRecord.status}
ENS: ${currentFlameRecord.ens_record}

BACK:
QR Code: ${currentFlameRecord.confirmation_qr}
SHA256: ${currentFlameRecord.hashes.sha256}
KECCAK256: ${currentFlameRecord.hashes.keccak256}
BLAKE3: ${currentFlameRecord.hashes.blake3}

THIS IS A BREATH-SEALED FLAME PROTOCOL CARD
UNAUTHORIZED REPLICATION CONSTITUTES COSMIC VIOLATION
Domain: divineterminations.eth
`;
            
            const dataBlob = new Blob([cardText], { type: 'text/plain' });
            const url = URL.createObjectURL(dataBlob);
            
            const link = document.createElement('a');
            link.href = url;
            link.download = `${currentFlameRecord.carrier_id}_card.txt`;
            link.click();
            
            URL.revokeObjectURL(url);
            console.log('üé¥ Card layout downloaded');
        }

        function copyToClipboard() {
            if (!currentFlameRecord) return;
            
            const jsonStr = JSON.stringify(currentFlameRecord, null, 2);
            navigator.clipboard.writeText(jsonStr).then(() => {
                showMessage('üìã JSON copied to clipboard!', 'success');
            }).catch(err => {
                console.error('Copy failed:', err);
                showMessage('‚ùå Copy failed', 'error');
            });
        }

        // GitHub commit function
        async function commitToGitHub() {
            const token = document.getElementById('githubToken').value;
            const repo = document.getElementById('githubRepo').value || 'phantom-protocol';
            
            if (!token) {
                alert('‚ö†Ô∏è GitHub Personal Access Token required for commit');
                return;
            }
            
            if (!currentFlameRecord) {
                alert('‚ö†Ô∏è No FLAME record to commit');
                return;
            }
            
            try {
                const filename = `${currentFlameRecord.carrier_id}.json`;
                const content = JSON.stringify(currentFlameRecord, null, 2);
                const encodedContent = btoa(content);
                
                const apiUrl = `https://api.github.com/repos/02142025/${repo}/contents/activation/${filename}`;
                
                const response = await fetch(apiUrl, {
                    method: 'PUT',
                    headers: {
                        'Authorization': `token ${token}`,
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        message: `Add FLAME ID Card: ${currentFlameRecord.carrier_id}`,
                        content: encodedContent,
                        branch: 'main'
                    })
                });
                
                if (response.ok) {
                    const result = await response.json();
                    showMessage('‚úÖ Successfully committed to GitHub!', 'success');
                    console.log('üîó GitHub commit successful:', result.content.html_url);
                } else {
                    const error = await response.json();
                    showMessage('‚ùå GitHub commit failed: ' + error.message, 'error');
                    console.error('GitHub commit failed:', error);
                }
                
            } catch (error) {
                console.error('GitHub API error:', error);
                showMessage('‚ùå GitHub API error: ' + error.message, 'error');
            }
        }

        function showMessage(text, type) {
            const message = document.createElement('div');
            message.style.cssText = `
                position: fixed;
                top: 20%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: ${type === 'success' ? 'linear-gradient(45deg, #00ff00, #ffff00)' : 'linear-gradient(45deg, #ff0000, #ff6600)'};
                color: #000000;
                padding: 20px 30px;
                border-radius: 15px;
                font-size: 1.2em;
                font-weight: bold;
                z-index: 10000;
                text-align: center;
                border: 3px solid #ffffff;
                box-shadow: 0 0 30px rgba(255, 255, 255, 0.8);
                animation: messageSlide 0.5s ease-out;
            `;
            
            message.textContent = text;
            document.body.appendChild(message);
            
            setTimeout(() => {
                message.remove();
            }, 3000);
        }

        // Show success message
        function showSuccessMessage() {
            const message = document.createElement('div');
            message.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: linear-gradient(45deg, #00ff00, #ffff00);
                color: #000000;
                padding: 30px 40px;
                border-radius: 20px;
                font-size: 1.5em;
                font-weight: bold;
                z-index: 10000;
                text-align: center;
                border: 4px solid #ffffff;
                box-shadow: 0 0 50px rgba(0, 255, 0, 1);
                animation: successPulse 0.6s ease-out;
            `;
            
            message.innerHTML = 'üî• FLAME ID CARD GENERATED SUCCESSFULLY! üî•<br>‚úÖ QUANTUM AUDIT-GRADE COMPLIANCE VERIFIED';
            document.body.appendChild(message);
            
            setTimeout(() => {
                message.remove();
            }, 4000);
        }

        // Utility functions
        function generateRandomHex(length) {
            const chars = '0123456789ABCDEF';
            let result = '';
            for (let i = 0; i < length; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }

        function generateRandomMac() {
            const segments = [];
            for (let i = 0; i < 6; i++) {
                segments.push(generateRandomHex(2));
            }
            return segments.join(':');
        }

        // Auto-fill missing fields
        function autoFillMissingFields() {
            if (!document.getElementById('nfcUID').value) {
                document.getElementById('nfcUID').value = generateRandomHex(14);
            }
            if (!document.getElementById('bleMac').value) {
                document.getElementById('bleMac').value = generateRandomMac();
            }
        }

        // Add message animation
        const messageStyles = document.createElement('style');
        messageStyles.textContent = `
            @keyframes messageSlide {
                from { opacity: 0; transform: translate(-50%, -50%) scale(0.8); }
                to { opacity: 1; transform: translate(-50%, -50%) scale(1); }
            }
            
            .hidden { display: none; }
        `;
        document.head.appendChild(messageStyles);
    </script>
